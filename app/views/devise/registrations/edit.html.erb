<h2>修改 <%= resource_name.to_s.humanize %></h2>
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'form-vertical' }) do |f| %>
  <%= f.error_notification %>
  <%= display_base_errors resource %>
  <%= f.input :name,label:'名称', :autofocus => true %>
  <%= f.input :email,label:'邮箱', :required => true %>
  <%= f.input :password,label:'新密码', :autocomplete => "off", :hint => "leave it blank if you don't want to change it", :required => false %>
  <%= f.input :password_confirmation,label:'确认新密码', :required => false %>
  <%= f.input :current_password,label:'当前密码', :hint => "请输入当前密码确认修改", :required => true %>
  <%= f.button :submit, '修改', :class => 'btn-primary' %>
<% end %>
<h3>删除账号</h3>
<p><%= link_to "删除账号", registration_path(resource_name), :data => { :confirm => "删除后无法恢复,确定删除此账号?" }, :method => :delete %>.</p>
<%= link_to "返回", :back %>
